<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_tips"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:gravity="center"
    android:orientation="vertical">


    <!--errropage-->
    <RelativeLayout
        android:id="@+id/target_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/id_base_icon"
            android:layout_width="70dip"
            android:layout_height="70dip"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dip"
            android:src="@mipmap/no_net_icon" />


        <TextView
            android:id="@+id/id_base_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/id_base_icon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dip"
            android:text="(⊙o⊙)…雾霾太大，连页面 都不见了？" />


        <TextView

            android:id="@+id/id_base_reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/id_base_tips"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dip"
            android:background="@drawable/selector_btn_back_gray"
            android:clickable="true"
            android:gravity="center"
            android:paddingBottom="6dp"
            android:paddingLeft="18dp"
            android:paddingRight="18dp"
            android:paddingTop="6dp"
            android:text="点击重试"
            android:textColor="#ffffff" />
    </RelativeLayout>


</LinearLayout>