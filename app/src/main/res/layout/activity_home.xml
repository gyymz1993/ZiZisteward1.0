<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ymz="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="vertical">


    <com.ymz.baselibrary.widget.NavigationBarView
        android:id="@+id/id_nativgation_view"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        ymz:backgrounds="#000000"
        ymz:leftIcon="@drawable/title_back"
        ymz:rightColor="@color/white" />

    <com.lsjr.zizisteward.coustom.NoScrollViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fitsSystemWindows="true" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#c7c7c7" />

    <com.ys.uilibrary.tab.BottomTabView
        android:id="@+id/bottomTabView"
        android:layout_width="match_parent"
        android:layout_height="55dip"
        android:background="@color/white"
        android:gravity="bottom" />


</LinearLayout>