<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/id_lay_login"
            android:layout_width="match_parent"
            android:layout_height="200dip"
            android:background="@color/white"
            android:orientation="vertical">

            <com.lsjr.zizi.view.ClearEditText
                android:id="@+id/id_tv_name"
                style="@style/layout_vertical"
                android:layout_marginLeft="22dip"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint=" 给自己来个霸气的名字吧"
                android:singleLine="true"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="3px"
                android:layout_marginLeft="22dip"
                android:background="@color/line" />

            <RelativeLayout
                style="@style/layout_vertical"
                android:layout_weight="1">

                <com.lsjr.zizi.view.ClearEditText
                    android:id="@+id/tv_lg_number"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="22dip"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="手机号"
                    android:singleLine="true"
                    android:inputType="number"
                    />

                <Button
                    android:visibility="gone"
                    android:id="@+id/btn_lg_code"
                    android:layout_width="100dip"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="5dip"
                    android:layout_marginRight="15dip"
                    android:layout_marginTop="5dip"
                    android:background="@drawable/login_code_selector"
                    android:enabled="false"
                    android:hint="获取验证码"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="3px"
                android:layout_marginLeft="22dip"
                android:background="@color/line" />

            <com.lsjr.zizi.view.ClearEditText
                android:id="@+id/id_pwd"
                style="@style/layout_vertical"
                android:layout_marginLeft="22dip"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint=" 密码"
                android:singleLine="true"
                android:inputType="textPassword"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="3px"
                android:layout_marginLeft="22dip"
                android:background="@color/line" />


            <com.lsjr.zizi.view.ClearEditText
                android:id="@+id/id_re_pwd"
                style="@style/layout_vertical"
                android:layout_marginLeft="22dip"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="确认密码"
                android:singleLine="true"
                android:inputType="textPassword"
                />

        </LinearLayout>


        <Button
            android:id="@+id/id_btn_confir"
            android:text="确认"
            android:textColor="@color/white"
            android:textSize="20dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="35dip"
            android:layout_below="@+id/id_lay_login"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:enabled="false"
            android:background="@drawable/login_code_selector"
            />
    </RelativeLayout>


</LinearLayout>