<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_bg"
    android:orientation="vertical">


    <com.ymz.baselibrary.widget.ItemView
        android:id="@+id/id_circle_firind"
        style="@style/OptionItem"
        android:layout_marginTop="10dip"
        android:layout_width="match_parent"
        android:layout_height="55dip"
        app:left_src="@drawable/icon_cicle"
        app:right_src="@mipmap/icon_more"
        app:to_left_img_text="朋友圈"
        />


    <com.ymz.baselibrary.widget.ItemView
        android:layout_marginTop="@dimen/album_dp_10"
        style="@style/OptionItem"
        android:layout_width="match_parent"
        android:layout_height="55dip"
        app:left_src="@drawable/icon_shequ"
        app:right_src="@mipmap/icon_more"
        app:to_left_img_text="社区"
        />


    <com.ymz.baselibrary.widget.ItemView
        android:id="@+id/oivScan"
        style="@style/OptionItem"
        android:layout_marginTop="10dip"
        android:layout_width="match_parent"
        android:layout_height="55dip"
        app:left_src="@drawable/icon_scan"
        app:right_src="@mipmap/icon_more"
        app:to_left_img_text="@string/scan"
        />


    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <View
            style="@style/Line"
            android:layout_marginLeft="@dimen/option_item_margin_left"
            android:layout_marginRight="@dimen/option_item_margin_right"
            android:background="#FFEBEBEB"
            />
    </com.zhy.autolayout.AutoRelativeLayout>


    <com.ymz.baselibrary.widget.ItemView
        style="@style/OptionItem"
        android:layout_width="match_parent"
        android:layout_height="55dip"
        app:left_src="@drawable/icon_product"
        app:right_src="@mipmap/icon_more"
        app:to_left_img_text="活动"
        />

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <View
            style="@style/Line"
            android:layout_marginLeft="@dimen/option_item_margin_left"
            android:layout_marginRight="@dimen/option_item_margin_right"
            android:background="#FFEBEBEB"
            />
    </com.zhy.autolayout.AutoRelativeLayout>


</com.zhy.autolayout.AutoLinearLayout>
